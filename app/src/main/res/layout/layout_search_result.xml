<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView android:id="@id/search_result_art"
        android:layout_width="@dimen/button3XL"
        android:layout_height="@dimen/button3XL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/search_result_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="@dimen/marginXL"
        android:layout_marginEnd="@dimen/marginXS"
        android:layout_marginVertical="@dimen/marginXS"/>

    <androidx.appcompat.widget.AppCompatTextView android:id="@id/search_result_title"
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/search_result_art"
        app:layout_constraintEnd_toStartOf="@id/search_result_checkbox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/search_result_subtitle"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        android:maxLines="1"
        android:maxLength="19"
        android:textColor="?attr/colorOnBackground"/>

    <androidx.appcompat.widget.AppCompatTextView android:id="@id/search_result_subtitle"
        style="@style/Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/search_result_title"
        app:layout_constraintEnd_toStartOf="@id/search_result_checkbox"
        app:layout_constraintTop_toBottomOf="@id/search_result_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:maxLines="1"
        android:maxLength="23"
        android:textColor="?attr/colorOnBackground"/>
    
    <androidx.appcompat.widget.AppCompatCheckBox android:id="@id/search_result_checkbox"
        android:layout_width="@dimen/buttonM"
        android:layout_height="@dimen/buttonM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/marginXL"
        android:button="@null"/>
</androidx.constraintlayout.widget.ConstraintLayout>