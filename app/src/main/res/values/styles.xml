<resources>
    <!-- extendable Layout dimensions -->
    <style name="FullMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FullWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWidthWrapHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Null buttons -->
    <style name="NullButton">
        <item name="android:button">@null</item>
    </style>

    <!-- Text Appearances -->
    <style name="Title" parent="FullWrapContent">
        <item name="fontFamily">@font/trebucbd</item>
        <item name="android:textSize">@dimen/textBody1</item>
    </style>

    <style name="Subtitle" parent="FullWrapContent">
        <item name="android:textSize">@dimen/textSubtitle1</item>
    </style>

    <style name="SearchHint">
        <item name="fontFamily">@font/trebucit</item>
        <item name="android:textSize">@dimen/textBody1</item>
    </style>

    <!-- Every Activity uses ConstraintLayout -->
    <style name="ActivityBounds" parent="FullMatchParent">
        <item name="android:background">?attr/backgroundColor</item>
    </style>

    <!-- Navigation -->
    <style name="NavigationTitle" parent="Title">
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/textSubtitle1</item>
    </style>

    <style name="NavigationSubtitle" parent="Subtitle">
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/textSubtitle2</item>
    </style>

    <!-- ModuleLayout -->
    <style name="Module" parent="MatchWidthWrapHeight">
        <item name="android:layout_marginHorizontal">@dimen/marginS</item>
        <item name="android:layout_marginTop">@dimen/marginL</item>
        <item name="android:padding">@dimen/paddingL</item>
        <item name="android:background">@drawable/bg_module</item>
    </style>

    <style name="ModuleArtist">
        <item name="android:shape">ring</item>
        <item name="android:layout_width">@dimen/size_module_artist</item>
        <item name="android:layout_height">@dimen/size_module_artist</item>
    </style>

    <style name="ModuleArt">
        <item name="android:shape">rectangle</item>
        <item name="android:layout_width">@dimen/size_module_art</item>
        <item name="android:layout_height">@dimen/size_module_art</item>
    </style>

    <!-- Song/Playlist name -->

    <style name="ModuleArtTitle" parent="Title">
        <item name="android:layout_centerHorizontal">true</item>
        <!-- Rather small -->
        <item name="android:textSize">@dimen/textSubtitle1</item>
    </style>

    <!-- Artist name -->
    <style name="ModuleArtSubtitle" parent="Subtitle">
        <item name="android:layout_centerHorizontal">true</item>
        <!-- Yes, rather small. -->
        <item name="android:textSize">@dimen/textCaption</item>
    </style>

</resources>