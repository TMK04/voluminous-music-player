<resources>
    <!-- Base application theme. -->
    <style name="Theme.Voluminous" parent="Theme.MaterialComponents">
        <!-- Brand color. -->
        <item name="backgroundColor">@color/background</item>
        <item name="colorOnBackground">@color/info_light</item>

        <item name="colorPrimarySurface">@color/light</item>
        <item name="colorOnPrimarySurface">@color/info_dark</item>

        <item name="colorSurface">@color/light_variant</item>
        <item name="colorOnSurface">@color/passive_dark</item>
        <item name="strokeColor">@color/passive_light</item>

        <item name="colorSecondary">@color/highlight_light</item>
        <item name="colorPrimary">@color/highlight_dark</item>

        <item name="colorAccent">@color/accent_light</item>

        <item name="colorError">@color/error_dark</item>

        <!-- Text/Font -->
        <item name="android:fontFamily">@font/trebuchet_ms</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- Customize your theme here. -->
        <item name="android:strokeColor">@null</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.Voluminous.Dark">
        <!-- Brand color. -->
        <item name="colorPrimarySurface">@color/dark</item>
        <item name="colorOnPrimarySurface">@color/info_light</item>

        <item name="colorSurface">@color/dark_variant</item>
        <item name="colorOnSurface">@color/passive_light</item>
        <item name="strokeColor">@color/passive_dark</item>

        <item name="colorAccent">@color/accent_dark</item>

        <item name="colorError">@color/error_light</item>
    </style>

</resources>